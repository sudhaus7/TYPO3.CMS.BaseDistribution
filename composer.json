{
	"repositories": [
		{ "type": "vcs", "url": "https://github.com/mschwemer/typo3-secure-web" },
		{ "type": "vcs", "url": "https://github.com/mschwemer/typo3-composer-setup" },
		{ "type": "path", "url": "packages/*" },
		{ "type": "composer", "url": "https://composer.typo3.org/" },
		{ "type": "composer", "url": "https://packages.sudhaus7.de/" }
	],
	"name": "sudhaus7/default-sitepackage",
	"description" : "Sudhaus7 TYPO3 CMS Base Sitepackage",
	"license": "GPL-2.0-or-later",
	"config": {
		"platform": {
			"php": "7.2"
		}
	},

	"require": {
		"helhum/typo3-composer-setup": "dev-compat-v10",
		"helhum/typo3-secure-web": "dev-compat-v10",
		"typo3/cms-backend": "~10.4.0",
		"typo3/cms-core": "~10.4.0",
		"typo3/cms-extbase": "~10.4.0",
		"typo3/cms-extensionmanager": "~10.4.0",
		"typo3/cms-filelist": "~10.4.0",
		"typo3/cms-fluid": "~10.4.0",
		"typo3/cms-frontend": "~10.4.0",
		"typo3/cms-install": "~10.4.0",
		"typo3/cms-recordlist": "~10.4.0",

		"typo3/cms-about": "~10.4.0",
		"typo3/cms-belog": "~10.4.0",
		"typo3/cms-beuser": "~10.4.0",
		"typo3/cms-felogin": "~10.4.0",
		"typo3/cms-fluid-styled-content": "~10.4.0",
		"typo3/cms-form": "~10.4.0",
		"typo3/cms-impexp": "~10.4.0",
		"typo3/cms-info": "~10.4.0",
		"typo3/cms-rte-ckeditor": "~10.4.0",
		"typo3/cms-setup": "~10.4.0",
		"typo3/cms-seo": "~10.4.0",
		"typo3/cms-sys-note": "~10.4.0",
		"typo3/cms-t3editor": "~10.4.0",
		"typo3/cms-tstemplate": "~10.4.0",
		"typo3/cms-viewpage": "~10.4.0",
		"helhum/typo3-console": "~6.0"
	},


	"require-dev": {
		"phpunit/phpunit": "*",
		"typo3/cms-adminpanel": "^10.4",
		"ichhabrecht/filefill": "^3.2"
	},
	"extra": {
		"typo3/cms": {
			"cms-package-dir": "{$vendor-dir}/typo3/cms",
			"web-dir": "public",
			"root-dir": "private"
		},
		"helhum/dotenv-connector": {
			"env-file": ".env"
		}
	},
	"scripts":{
		"addtrustedhostpattern": "@php vendor/bin/typo3cms configuration:set SYS/trustedHostsPattern '.*'",
		"addfilefillconfig": "@php vendor/bin/typo3cms configuration:set EXTCONF/filefill/storages/1 '[{\"identifier\":\"sys_domain\"},{\"identifier\":\"placeholder\"}]' --json",
		"killcache": "@php vendor/bin/typo3cms cache:flush",
		"generatepackagestates": "@php vendor/bin/typo3cms install:generatepackagestates",
		"extensionsetupifpossible": "@php vendor/bin/typo3cms install:extensionsetupifpossible",

		"typo3install": [
			"@generatepackagestates",
			"@extensionsetupifpossible",
			"@addtrustedhostpattern",
			"@addfilefillconfig"
		],
		"post-autoload-dump": [
			"@typo3-cms-scripts",
			"@typo3install"
		]
	}
}

{
	"name": "sudhaus7/default-sitepackage",
	"description" : "Sudhaus7 TYPO3 CMS Base Sitepackage",
	"license": "GPL-2.0-or-later",
	"config": {
		"optimize-autoloader": true,
		"sort-packages": true,
		"platform": {
			"php": "7.2"
		},
		"allow-plugins": {
			"typo3/cms-composer-installers": true,
			"typo3/class-alias-loader": true
		}
	},
	"repositories": [
		{ "type": "path", "url": "packages/*" },
		{ "type": "composer", "url": "https://composer.typo3.org/" },
		{ "type": "composer", "url": "https://packages.sudhaus7.de/" }
	],

	"require": {
		"ext-json": "*",
		"ext-pdo": "*",
		"php": "7.2.* || 7.3.* || 7.4.*",
		"helhum/typo3-console": "6.*",
		"helhum/typo3-composer-setup": "*",
		"helhum/typo3-secure-web": "0.2.*",
		"typo3/cms-backend": "^10.4.9",
		"typo3/cms-core": "^10.4.9",
		"typo3/cms-extbase": "^10.4.9",
		"typo3/cms-extensionmanager": "^10.4.9",
		"typo3/cms-filelist": "^10.4.9",
		"typo3/cms-fluid": "^10.4.9",
		"typo3/cms-frontend": "^10.4.9",
		"typo3/cms-install": "^10.4.9",
		"typo3/cms-recordlist": "^10.4.9",
		"typo3/cms-about": "^10.4.9",
		"typo3/cms-belog": "^10.4.9",
		"typo3/cms-beuser": "^10.4.9",
		"typo3/cms-felogin": "^10.4.9",
		"typo3/cms-fluid-styled-content": "^10.4.9",
		"typo3/cms-form": "^10.4.9",
		"typo3/cms-impexp": "^10.4.9",
		"typo3/cms-info": "^10.4.9",
		"typo3/cms-rte-ckeditor": "^10.4.9",
		"typo3/cms-setup": "^10.4.9",
		"typo3/cms-seo": "^10.4.9",
		"typo3/cms-sys-note": "^10.4.9",
		"typo3/cms-t3editor": "^10.4.9",
		"typo3/cms-tstemplate": "^10.4.9",
		"typo3/cms-viewpage": "^10.4.9",
		"typo3/cms-composer-installers": "^3.0",
		"typo3-console/composer-auto-commands": "^0.4"
	},
	"require-dev": {
		"ichhabrecht/filefill": "^3.2",
		"phpunit/phpunit": "*",
		"typo3/cms-adminpanel": "^10.4.9",
		"typo3/cms-lowlevel": "^10.4.9",
		"typo3/coding-standards": "^0.5.3"
	},
	"extra": {
		"typo3/cms": {
			"cms-package-dir": "{$vendor-dir}/typo3/cms",
			"web-dir": "public",
			"root-dir": "private"
		},
		"helhum/dotenv-connector": {
			"env-file": ".env"
		}
	},
	"scripts":{
		"pre-install-cmd": [
			"@add-local-git-config"
		],
		"pre-update-cmd": [
			"@add-local-git-config"
		],
		"add-local-git-config": "git config --local include.path ../.gitconfig",
		"addtrustedhostpattern": "@php vendor/bin/typo3cms configuration:set SYS/trustedHostsPattern '.*'",
		"addfilefillconfig": "@php vendor/bin/typo3cms configuration:set EXTCONF/filefill/storages/1 '[{\"identifier\":\"sys_domain\"},{\"identifier\":\"placeholder\"}]' --json",
		"killcache": "@php vendor/bin/typo3cms cache:flush",
		"generatepackagestates": "@php vendor/bin/typo3cms install:generatepackagestates",
		"extensionsetupifpossible": "@php vendor/bin/typo3cms install:extensionsetupifpossible",

		"typo3install": [
			"@generatepackagestates",
			"@extensionsetupifpossible",
			"@addtrustedhostpattern",
			"@addfilefillconfig"
		],
		"guidedinstall" : "@php vendor/bin/typo3cms install:setup",
		"post-autoload-dump": [
			"@killcache"
		],
		"post-install-cmd": [
			"@generatepackagestates",
			"echo -e 'If this is an initial install either execute `composer guidedinstall` or import a typo3 database and execute `composer typo3install`'"
		],
		"csfixer": "@php vendor/bin/php-cs-fixer fix"
	}
}
